<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <context id="MySQLTables" targetRuntime="MyBatis3" defaultModelType="flat">
        <commentGenerator>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${driverClass}"
                        connectionURL="${connectionURL}"
                        userId="${userId}"
                        password="${password}">
        </jdbcConnection>

        <!--targetProject:自动生成代码的位置   -->
        <javaModelGenerator targetPackage="${modelPackage}" targetProject="src/main/java">
            <!--从数据库返回的值被清理前后的空格    -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="${sqlMapperPackage}" targetProject="src/main/resources">
        </sqlMapGenerator>

        <javaClientGenerator targetPackage="${mapperPackage}" targetProject="src/gen/unused"
                             type="XMLMAPPER">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>
        
        <table tableName="t_bill" domainObjectName="TBill"
               enableCountByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               enableUpdateByExample="false"
               selectByExampleQueryId="false">
            <generatedKey column="id" identity="true" sqlStatement="SELECT LAST_INSERT_ID()"/>
            <columnOverride column="bill_type" javaType="cn.monstar.payment.domain.model.enums.BillTypeEnum"
                            typeHandler="cn.monstar.payment.domain.util.R2EHandler"/>
        </table>
        <table tableName="t_payment" domainObjectName="TPayment"
               enableCountByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               enableUpdateByExample="false"
               selectByExampleQueryId="false">
            <generatedKey column="id" identity="true" sqlStatement="SELECT LAST_INSERT_ID()"/>
            <columnOverride column="payment_type" javaType="cn.monstar.payment.domain.model.enums.PaymentTypeEnum"
                            typeHandler="cn.monstar.payment.domain.util.R2EHandler"/>
            <columnOverride column="payment_status" javaType="cn.monstar.payment.domain.model.enums.PaymentStatusEnum"
                            typeHandler="cn.monstar.payment.domain.util.R2EHandler"/>
        </table>
        <table tableName="t_refund" domainObjectName="TRefund"
               enableCountByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               enableUpdateByExample="false"
               selectByExampleQueryId="false">
            <generatedKey column="id" identity="true" sqlStatement="SELECT LAST_INSERT_ID()"/>
            <columnOverride column="refund_status" javaType="cn.monstar.payment.domain.model.enums.RefundStatusEnum"
                            typeHandler="cn.monstar.payment.domain.util.R2EHandler"/>
        </table>

    </context>
</generatorConfiguration>